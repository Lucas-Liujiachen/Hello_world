cd
cd imx-atf
make clean PLAT=imx8mp
LDFLAGS="" make PLAT=imx8mp CROSS_COMPILE=aarch64-linux-gnu-


sudo make clean
sudo make CROSS_COMPILE=aarch64-linux-gnu- imx8mp_ddr4_evk_defconfig

sudo make clean
sudo make CROSS_COMPILE=aarch64-linux-gnu- 

sudo make CROSS_COMPILE=aarch64-linux-gnu- clean
sudo make CROSS_COMPILE=aarch64-linux-gnu- imx8mp_Tony_defconfig

sudo uuu -b emmc flash.bin

cd
cd uboot-imx-lf_v2022.04
sudo make CROSS_COMPILE=aarch64-linux-gnu- clean
sudo make CROSS_COMPILE=aarch64-linux-gnu- imx8mp_evk_defconfig
sudo make CROSS_COMPILE=aarch64-linux-gnu-


cd
cp uboot-imx-lf_v2022.04/arch/arm/dts/imx8mp-evk.dtb                  ./imx-mkimage/iMX8M/imx8mp-evk.dtb
cp uboot-imx-lf_v2022.04/spl/u-boot-spl.bin                                ./imx-mkimage/iMX8M/
cp uboot-imx-lf_v2022.04/u-boot-nodtb.bin                                  ./imx-mkimage/iMX8M/

cp imx-atf/build/imx8mp/release/bl31.bin                       ./imx-mkimage/iMX8M/


cd imx-mkimage
make SOC=iMX8MP clean
make SOC=iMX8MP flash_evk
sudo cp ~/imx-mkimage/iMX8M/flash.bin ~/mfgtools



cd 
cd mfgtools

sudo uuu -b emmc Tony.bin


